@model IlaçTakip.Models.UserInformation
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Index</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Smart Login Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Meta tag Keywords -->
    <!-- css files -->
    <link href="~/Screens/Login/css/style.css" rel="stylesheet" type="text/css" media="all">
    <!-- online-fonts -->
    <link href="//fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900iSlabo+27px&subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <!--//online-fonts -->
    <body>
        <!--header-->
        <div class="agileheader">
            <h1>Login Page</h1>
        </div>
        <!--//header-->
        <!--main-->
        <div class="main-w3l">
            <div class="w3layouts-main">
                <h2>Login</h2>
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    @Html.TextBoxFor(i => i.UserEmail, new { @type = "email", @placeholder = "Enter your e-mail address." })<br />

                    @Html.TextBoxFor(i => i.Password, new { @type = "password", @placeholder = "Enter your password." })<br />

                    <h6><a href="/User/ForgetPassword/">Forget Password?</a></h6>
                    <div class="clear"></div>
                    <input type="submit" value="login" name="login">

                }
                <p>Don't have an account?<a href="/User/Register/">Sign Up</a></p>
            </div>

            <div>
                @if (ViewBag.Error != null)
                {
                    <h3 style="color:red">@ViewBag.Error</h3>
                }


            </div>

        </div>
        <div class="footer-w3l">

        </div>


    </body>
</html>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
